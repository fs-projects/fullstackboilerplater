<% include ./partials/header %>


<div class="container">
    <h1 id="login-page-header">Login</h1>
    <div id ="login-page-form-div">
        <form action="/login" method="POST">
            <!--.row has been added with form-group
            Create horizontal forms with the grid by adding the .row class to form groups reference 
            https://getbootstrap.com/docs/4.0/components/forms/-->
            <div class="form-group row">
                <input type="text" class="form-control" name="username" placeholder="enter your username">
            </div>
            <div class="form-group row">
                <input type="password" class="form-control" name="password" placeholder="enter your password">
            </div>
            <div class="form-group row">
                <button class="btn btn-lg btn-info btn-block">Login!</button>
            </div>
            <a href="/campgrounds/">Back to Campgrounds page</a>
        </form>
    </div>    
</div>


